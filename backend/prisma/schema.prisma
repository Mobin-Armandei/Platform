generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {  
  id           Int       @id @default(autoincrement())
  email        String    @unique
  firstName    String
  lastName     String?
  password     String
  role         String    // ADMIN | CUSTOMER | SUPPORT | FINANCE | SITE_MANAGER
  gender       String    // MALE | FEMALE
  phoneNumber  String    @unique
  birthDate    DateTime?
  roleId       Int
  roleRel      Role      @relation(fields: [roleId], references: [id])
  wallet       Wallet?
  projects     Project[]
  tickets      Ticket[]
  posts        Post[]
  createdAt    DateTime  @default(now()) @db.DateTime2
  updatedAt    DateTime  @updatedAt @db.DateTime2

  @@map("users")
}

model Role {
  id        Int      @id @default(autoincrement())
  name      String   @unique  // ADMIN | CUSTOMER | SUPPORT | FINANCE
  users     User[]
  createdAt DateTime @default(now()) @db.DateTime2
  updatedAt DateTime @updatedAt @db.DateTime2

  @@map("roles")
}

model Wallet {
  id        Int        @id @default(autoincrement())
  balance   Decimal    @default(0)
  userId    Int        @unique
  user      User       @relation(fields: [userId], references: [id])
  logs      WalletLog[]
  createdAt DateTime   @default(now()) @db.DateTime2
  updatedAt DateTime   @updatedAt @db.DateTime2

  @@map("wallets")
}

model WalletLog {
  id        Int      @id @default(autoincrement())
  amount    Decimal
  type      String   // DEPOSIT | WITHDRAW
  reason    String?
  walletId  Int
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  createdAt DateTime @default(now()) @db.DateTime2

  @@map("wallet_logs")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  domain      String?
  status      String   // PENDING | IN_PROGRESS | COMPLETED
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now()) @db.DateTime2
  updatedAt   DateTime @updatedAt @db.DateTime2

  @@map("projects")
}

model Ticket {
  id        Int      @id @default(autoincrement())
  title     String
  message   String
  status    String   // OPEN | ANSWERED | CLOSED
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now()) @db.DateTime2
  updatedAt DateTime @updatedAt @db.DateTime2

  @@map("tickets")
}

model Category {
  id                Int          @id @default(autoincrement())
  title             String       @unique
  description       String
  slug              String       @unique
  parentId          Int?      
  parent            Category?    @relation("SubCategories", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children          Category[]   @relation("SubCategories")
  posts             Post[]
}

model Post {
  id          Int        @id @default(autoincrement())
  title       String
  content     String
  foreword    String
  tags        String?
  images      String?
  published   Boolean    @default(false)
  publishedAt DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  authorId    Int?
  categoryId  Int?
  author      User?      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@map("posts")
}